{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
	},
	"include": [
		"src"
	]
}
